<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_gravity="center_vertical" android:orientation="vertical" android:background="@android:color/white" android:padding="@dimen/connect_dialog_content_margin" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/connect_dialog_margin" android:layout_marginBottom="@dimen/connect_dialog_margin">
    <ScrollView android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="12sp" android:gravity="center_horizontal" android:id="@+id/text_account_link_device" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/connect_dialog_content_margin" android:text="@string/connect_account_linking_listening"/>
            <TextView android:textAppearance="@style/TextAppearance.Cat.Dialog.Title.Upsell" android:gravity="center_horizontal" android:id="@+id/text_account_link_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/connect_dialog_content_margin" android:text="@string/connect_account_linking_header"/>
            <ImageView android:layout_gravity="center_horizontal" android:id="@+id/device_icon" android:layout_width="@dimen/connect_dialog_image_size" android:layout_height="wrap_content" android:layout_marginTop="@dimen/connect_dialog_content_margin"/>
            <TextView android:textColor="@color/txt_dialog_text" android:gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/connect_dialog_content_margin" android:text="@string/connect_account_linking_subheader"/>
        </LinearLayout>
    </ScrollView>
    <Button android:id="@+id/button_accept" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/connect_dialog_content_margin" android:text="@string/connect_account_linking_affirmative" android:filterTouchesWhenObscured="false" style="?attr/pasteButtonStylePrimary"/>
    <Button android:textColor="@color/txt_button_light" android:id="@+id/button_cancel" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/connect_dialog_cancel_button_top_margin" android:text="@string/connect_account_linking_dismiss" android:filterTouchesWhenObscured="false" style="?attr/pasteButtonStyleBorderless"/>
</LinearLayout>
