<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:background="@drawable/login_background_gradient" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:orientation="vertical" android:id="@+id/sign_up_input_fields_container" android:paddingLeft="16dp" android:paddingRight="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/login_page_margin_top" style="@style/SignupInputFieldsContainer">
        <TextView android:gravity="center" android:id="@+id/sign_up_header" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/login_page_header_margin_top" android:layout_marginBottom="@dimen/login_page_header_margin_bottom" android:text="@string/signup_create_account_title" style="@style/LoginHeaderText"/>
        <FrameLayout android:id="@+id/sign_up_input_fields_view_container" android:layout_width="match_parent" android:layout_height="match_parent">
            <com.spotify.music.features.signup.emailpassword.view.EmailPasswordView android:gravity="center_horizontal" android:id="@+id/create_account_email_password_input_fields_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.spotify.music.features.signup.agegender.view.AgeGenderView android:gravity="center_horizontal" android:id="@+id/create_account_age_gender_input_fields_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
            <com.spotify.music.features.signup.displayname.DisplayNameView android:gravity="center_horizontal" android:id="@+id/create_account_display_name_container" android:visibility="invisible" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        </FrameLayout>
        <ProgressBar android:layout_gravity="center_horizontal" android:id="@+id/progress_bar" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/signup_padding"/>
    </LinearLayout>
</ScrollView>
