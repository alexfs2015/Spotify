<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:id="@+id/podcast_onboarding_skip_dialog" android:background="@drawable/podcast_onboarding_skip_dialog_background" android:layout_width="wrap_content" android:layout_height="wrap_content">
    <ScrollView android:id="@+id/content" android:clipToPadding="false" android:layout_width="match_parent" android:layout_height="wrap_content" android:overScrollMode="never">
        <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textAppearance="?attr/pasteTextAppearanceHeaderMedium" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/podcast_onboarding_skip_dialog_title" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/glue_dialog_content_vertical_margin" android:text="@string/podcast_onboarding_skip_dialog_title"/>
            <TextView android:textAppearance="?attr/pasteTextAppearanceBodyMedium" android:textColor="@color/black" android:gravity="center_horizontal" android:id="@+id/podcast_onboarding_skip_dialog_body" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp" android:text="@string/podcast_onboarding_skip_dialog_body"/>
        </LinearLayout>
    </ScrollView>
    <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:id="@+id/buttonPanel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="48dp">
        <Button android:id="@+id/podcast_onboarding_skip_dialog_skip_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/podcast_onboarding_skip_dialog_skip" android:filterTouchesWhenObscured="true" style="?attr/glueButtonPrimaryGreen"/>
        <Button android:textColor="@color/black" android:id="@+id/podcast_onboarding_skip_dialog_continue_button" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginBottom="16dp" android:text="@string/podcast_onboarding_skip_dialog_continue" android:filterTouchesWhenObscured="true" style="?attr/glueButtonSecondary"/>
    </LinearLayout>
</LinearLayout>
