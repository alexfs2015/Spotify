<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:padding="@dimen/std_16dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/std_16dp">
        <com.spotify.paste.widgets.SquareImageView android:id="@+id/cluster_left_image" android:background="@color/cat_grayscale_20" android:layout_width="96dp" android:layout_height="96dp" android:layout_marginLeft="0dp" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
        <com.spotify.paste.widgets.SquareImageView android:id="@+id/cluster_right_image" android:background="@color/cat_grayscale_20" android:layout_width="96dp" android:layout_height="96dp" android:layout_marginLeft="44dp" android:scaleType="fitCenter" android:layout_centerVertical="true"/>
