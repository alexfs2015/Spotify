<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="?android:attr/windowBackground" android:paddingLeft="40dp" android:paddingRight="40dp" android:paddingBottom="24dp" android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout android:focusable="true" android:focusableInTouchMode="true" android:layout_width="0px" android:layout_height="0px"/>
    <RelativeLayout android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content">
        <com.spotify.paste.widgets.FlexibleSquareImageView android:id="@+id/cover_art_image" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_marginBottom="8dp" android:scaleType="centerCrop" android:minWidth="160dp" app:widthFraction="@fraction/header_cover_art_screen_width_percentage"/>
        <ImageView android:id="@+id/camera_image" android:background="#9a000000" android:layout_width="wrap_content" android:layout_height="wrap_content" android:scaleType="centerInside" android:layout_alignLeft="@+id/cover_art_image" android:layout_alignTop="@+id/cover_art_image" android:layout_alignRight="@+id/cover_art_image" android:layout_alignBottom="@+id/cover_art_image" android:contentDescription="@string/edit_playlist_cover_art_description"/>
    </RelativeLayout>
    <RelativeLayout android:layout="@+id/title_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <EditText android:textAppearance="?attr/pasteTextAppearanceHeaderLarge" android:gravity="center_horizontal" android:id="@+id/title_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="@string/edit_playlist_name_hint" android:maxLines="1" android:selectAllOnFocus="true" android:inputType="textCapSentences" android:imeOptions="actionDone"/>
        <TextView android:textAppearance="?attr/pasteTextAppearanceHeaderLarge" android:gravity="center_horizontal" android:id="@+id/title_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:maxLines="1"/>
    </RelativeLayout>
    <RelativeLayout android:id="@+id/description_container" android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:id="@+id/add_description_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="32dp" android:text="@string/edit_playlist_description_title" android:layout_centerInParent="true" android:filterTouchesWhenObscured="false" style="?attr/pasteButtonStyleSmall"/>
        <EditText android:textAppearance="?attr/pasteTextAppearanceBodySmall" android:gravity="top|left|center_vertical|center_horizontal|center|start" android:id="@+id/description_edit_text" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp" android:hint="@string/edit_playlist_edit_description_hint" android:singleLine="false" android:maxLength="300" android:inputType="textMultiLine"/>
        <TextView android:textAppearance="?attr/pasteTextAppearanceBodySmall" android:id="@+id/description_text" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="24dp"/>
        <TextView android:textAppearance="?attr/pasteTextAppearanceMicro" android:textColor="@color/cat_grayscale_70" android:id="@+id/character_count_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>
