        <TextView android:id="@+id/sign_up_password_message" android:layout_width="wrap_content" android:layout_height="wrap_content" style="@style/LoginFieldInputError"/>
    </LinearLayout>
    <Button android:layout_gravity="center_horizontal" android:id="@+id/sign_up_next_button" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/login_page_header_margin_top" android:text="@string/signup_create_account_login_credentials_next" android:filterTouchesWhenObscured="false" style="?attr/glueButtonPrimaryWhite"/>
</LinearLayout>
