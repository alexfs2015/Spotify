        <shape>
            <solid android:color="@color/white"/>
            <size android:height="32sp"/>
            <corners android:radius="16sp"/>
            <padding android:left="@dimen/cat_button_small_padding" android:top="0px" android:right="@dimen/cat_button_small_padding" android:bottom="0px"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/white"/>
            <size android:height="32sp"/>
            <corners android:radius="16sp"/>
            <padding android:left="@dimen/cat_button_small_padding" android:top="0px" android:right="@dimen/cat_button_small_padding" android:bottom="0px"/>
