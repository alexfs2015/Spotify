<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigationBar.Adaptive">
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@null</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="BottomNavigationItem.Adaptive">
        <item name="android:gravity">right|center_horizontal|clip_horizontal</item>
        <item name="android:orientation">@null</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">@null</item>
    </style>
    <style name="BottomNavigationItemIcon.Adaptive">
        <item name="android:layout_marginLeft">8dp</item>
    </style>
    <style name="BottomNavigationItemTitle.Adaptive">
        <item name="android:textSize">11sp</item>
        <item name="android:gravity">left|center_horizontal</item>
        <item name="android:visibility">@null</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>
</resources>
